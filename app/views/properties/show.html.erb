<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>家賃:</strong>
  <%= @property.price %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.description %>
</p>

<% n = 0 %>
<% @property.near_stations.each do |station| %>
  <%= "最寄り駅#{n += 1}" %>
  <p>
  <strong>路線名:</strong>
  <%= station.route %>
  </p>

  <p>
  <strong>駅名:</strong>
  <%= station.name %>
  </p>

  <p>
  <strong>駅までの徒歩分数:</strong>
  <%= station.walk_time %>分
  </p>
<% end %>

<%= link_to '物件情報を編集する', edit_property_path(@property) %> |
<%= link_to '物件一覧へ戻る', properties_path %>
